{
  "$schema": "http://json-schema.org/draft-04/schema",
  "type": "object",
  "title": "The root schema",
  "description": "The root schema comprises the entire JSON document.",
  "default": {},
  "required2": [
    "FIXME: work around",
    "transportCallID",
    "modeOfTransportCode",
    "location"
  ],
  "required": ["transportCallID"],
  "properties": {
    "transportCallID": {
      "type": "string"
    },
    "transportCallSequenceNumber": {
      "type": "integer"
    },
    "carrierServiceCode": {
      "type": "string"
    },
    "carrierVoyageNumber": {
      "type": "string"
    },
    "UNLocationCode": {
      "type": "string"
    },
    "facilityCode": {
      "type": "string"
    },
    "facilityCodeListProvider": {
      "type": "string",
      "allOf": [
        {
          "enum": ["SMDG", "BIC"]
        }
      ]
    },
    "facilityTypeCode": {
      "type": ["string", "null"],
      "allOf": [
        {
          "enum": [
            "BOCR",
            "CLOC",
            "COFS",
            "COYA",
            "OFFD",
            "DEPO",
            "INTE",
            "POTE",
            "RAMP",
            null
          ]
        }
      ]
    },
    "otherFacility": {
      "type": ["string", "null"]
    },
    "modeOfTransport": {
      "type": "string",
      "allOf": [
        {
          "enum": ["VESSEL", "RAIL", "TRUCK", "BARGE"]
        }
      ]
    },
    "location": {
      "type": "object",
      "properties": {
        "locationName": {
          "type": "string"
        },
        "latitude": {
          "type": "string"
        },
        "longitude": {
          "type": "string"
        },
        "UNLocationCode": {
          "type": "string"
        },
        "address": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "street": {
              "type": "string"
            },
            "streetNumber": {
              "type": "string"
            },
            "floor": {
              "type": "string"
            },
            "postCode": {
              "type": "string"
            },
            "city": {
              "type": "string"
            },
            "stateRegion": {
              "type": "string"
            },
            "country": {
              "type": "string"
            }
          }
        }
      }
    },
    "vessel": {
      "type": "object",
      "required": ["vesselIMONumber"],
      "properties": {
        "vesselIMONumber": {
          "type": "string"
        },
        "vesselFlag": {
          "type": "string"
        },
        "vesselName": {
          "type": "string"
        },
        "vesselCallSignNumber": {
          "type": "string"
        },
        "vesselOperatorCarrierCode": {
          "type": "string"
        },
        "vesselOperatorCarrierCodeListProvider": {
          "type": "string"
        }
      }
    }
  }
}
